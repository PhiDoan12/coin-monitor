<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/MyCardViewStyle</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="Header1Style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextBodyStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@drawable/nav_bar_custom_color</item>
        <item name="itemBackground">@drawable/nav_bar_item_background</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
    </style>

</resources>
